<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.manojprabhakar.pushnotification.MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_market_prices">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <!--<ImageView-->
            <!--android:layout_width="174dp"-->
            <!--android:layout_height="140dp"-->
            <!--android:textAlignment="center"-->

            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="15dp" />-->

        <Spinner
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:id="@+id/veggie"
            android:entries="@array/vegetables"/>

        <!--<Button-->
            <!--android:layout_width="330dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/Getprice"-->
            <!--android:text="GetPrice"-->
            <!--android:onClick="SearchActivity"-->
            <!--android:singleLine="false" />-->

        <TextView
            android:layout_width="200dp"
            android:id="@+id/Getprice"
            android:onClick="SearchActivity"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/txt_white"
            android:gravity="center"
            android:text="GetPrice"
            android:background="@drawable/txtview"
            android:layout_marginBottom="20dp"
            android:visibility="visible" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/lyMarketPrices"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Vegetable"
                android:id="@+id/textView"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/VegName"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Form"
                android:id="@+id/textView2"
                android:layout_marginLeft="4dp" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/form"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Type"
                android:inputType="text"
                android:layout_alignStart="@+id/price"
                android:layout_alignLeft="@+id/price"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Average price/pound"
                android:id="@+id/textView1"
                android:layout_marginLeft="4dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/price1"
                android:text="Price"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text"
                android:layout_below="@+id/VegName"
                android:layout_alignStart="@+id/VegName"
                android:layout_alignLeft="@+id/VegName"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Average price/Cup"
                android:id="@+id/textView5"
                android:layout_marginLeft="4dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/price2"
                android:text="Price"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text"
                android:layout_below="@+id/VegName"
                android:layout_alignStart="@+id/VegName"
                android:layout_alignLeft="@+id/VegName"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Last Updated"
                android:id="@+id/textView3"
                android:layout_marginLeft="4dp" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/LastUpdated"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date"
                android:inputType="text"
                android:layout_below="@+id/price"
                android:layout_alignStart="@+id/price"
                android:layout_alignLeft="@+id/price"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
